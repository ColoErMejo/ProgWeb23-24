$tipo = $_POST['Tipo'];
$minutiResidui = $_POST['MinutiResidui'];
$creditoResiduo = $_POST['CreditoResiduo'];

// Esegui la query di aggiornamento nel database
$query = "UPDATE ContrattoTelefonico SET Tipo = '$tipo', MinutiResidui = '$minutiResidui', CreditoResiduo = '$creditoResiduo' WHERE ..."; // Completare la query con la condizione corretta
$result = $conn->query($query);

if ($result) {
    // Aggiornamento riuscito
    echo "Dati aggiornati con successo!";
} else {
    // Errore durante l'aggiornamento
    echo "Errore durante l'aggiornamento dei dati nel database!";
}

